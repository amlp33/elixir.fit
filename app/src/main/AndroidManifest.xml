<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yoga_">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <queries>
        <intent>
            <action android:name="com.google.android.youtube.api.service.START" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Yoga_">
        <activity
            android:name=".feedback"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".notificationTab"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".calorieCount"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".bmiCalculator"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".physicallyHandicappedHome"
            android:exported="false" />
        <activity
            android:name=".visibilityIssueHome"
            android:exported="false" />
        <activity
            android:name=".youtube_player"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity
            android:name=".chooseCondition"
            android:exported="false" />
        <activity
            android:name=".video_list"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".addDetails"
            android:exported="false" />
        <activity
            android:name=".login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profilePage"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
    </application>

</manifest>